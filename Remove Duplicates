class Solution {
    ArrayList<Integer> removeDuplicates(int[] arr) {

        int n = arr.length;
        ArrayList<Integer> list = new ArrayList<>();

        if (n == 0) {
            return list;
        }

        list.add(arr[0]);
        int i = 0;

        for (int j = 1; j < n; j++) {
            if (arr[i] != arr[j]) {
                list.add(arr[j]);
                i = j;
            }
        }

        return list;
    }
}
