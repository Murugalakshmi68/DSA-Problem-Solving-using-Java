class Solution {
    int maxSubarraySum(int[] arr) {

        int curSum = arr[0];
        int maxSum = arr[0];

        for (int i = 1; i < arr.length; i++) {
            curSum = Math.max(arr[i], curSum + arr[i]);
            maxSum = Math.max(maxSum, curSum);
        }

        return maxSum;
    }
}
