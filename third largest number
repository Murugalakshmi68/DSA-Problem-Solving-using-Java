class Solution {
    int thirdLargest(int arr[]) {
        // Your code here
        if (arr.length < 3)
            return -1;

        int first = Integer.MIN_VALUE;
        int second = Integer.MIN_VALUE;
        int third = Integer.MIN_VALUE;

        for (int x : arr) {
            if (x >= first) {
                third = second;
                second = first;
                first = x;
            } 
            else if (x >= second) {
                third = second;
                second = x;
            } 
            else if (x >= third) {
                third = x;
            }
        }

        return third;
        
    }
}
